@model Modelo.Discente.Academico

<aside class="right-side">
    <section class="content">
        <div class="row">
            <div class="col-md-9">
                <div class="box-body">
                    <div class="form-group">
                        <label asp-for="AcademicoID" class="control-label">Acadêmico ID:</label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-key" aria-hidden="true"></i>
                            </div>
                            <input asp-for="AcademicoID" class="form-control" disabled="disabled" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="RegistroAcademico" class="control-label">Registro Acadêmico:</label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-registered" aria-hidden="true"></i>
                            </div>
                            <input asp-for="RegistroAcademico" class="form-control" disabled="disabled" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Nome" class="control-label">Nome:</label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-user-circle" aria-hidden="true"></i>
                            </div>
                            <input asp-for="Nome" class="form-control" disabled="disabled" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Nascimento" class="control-label">Data de Nascimento:</label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-calendar" aria-hidden="true"></i>
                            </div>
                            <input asp-for="Nascimento" class="form-control" disabled="disabled" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <img class="img-thumbnail" src="@Url.Action("GetFoto", "Academico",	new	{ id = Model.AcademicoID })"
                     style="display:block; margin-left:auto; margin-right:auto;" />
            </div>
            <div class="col-md-3 text-center">
                @Html.ActionLink("Download", "DownloadFoto", "Academico", new { id = Model.AcademicoID }, null)
            </div>

        </div>
    </section>
</aside>