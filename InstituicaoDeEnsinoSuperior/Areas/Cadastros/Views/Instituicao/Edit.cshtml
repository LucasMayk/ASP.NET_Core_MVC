@model InstituicaoDeEnsinoSuperior.Modelo.Cadastros.Instituicao

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutIES.cshtml";
}

<body class="skin-black">
    <header class="header">
        <h1 class="mt-4 text-center"> Alterando uma instituição</h1>
        <br />
        <aside class="right-side">
            <section class="content">
                <div class="row">
                    <div class="col-md-9">
                        <div class="box-body">
                            <div class="form-group">
                                <form asp-action="Edit">
                                    <input type="hidden" asp-for="InstituicaoID" />
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group">
                                        <label asp-for="Nome" class="control-label">Nome:</label>
                                        <input asp-for="Nome" class="form-control" placeholder="Nome completo" />
                                        <span asp-validation-for="Nome" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Endereco" class="control-label">Endereço:</label>
                                        <input asp-for="Endereco" class="form-control" placeholder="Endereço completo" />
                                        <span asp-validation-for="Endereco" class="text-danger"></span>
                                        <br />
                                    </div>
                                    <br />
                                    <div class="form-group text-center h3">
                                        <input type="submit" value="Alterar" class="btn btn-light" />
                                        <a asp-action="Index" class="btn btn-info">Retornar à listagem de instituições</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="card-footer bg-dark text-center text-white">
                            Informe os dados acima e/ou clique em um dos botões de ação
                        </div>
                    </div>
                </div>
            </section>
        </aside>
    </header>
</body>


@section ScriptPage {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
