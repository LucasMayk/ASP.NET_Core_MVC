@model InstituicaoDeEnsinoSuperior.Modelo.Cadastros.Departamento

@{
    Layout = "_LayoutIES";
}

<body class="skin-black">
    <header class="header">
        <h1 class="mt-4 text-center"> Criando uma nova instituição</h1>
        <br />
        <aside class="right-side">
            <section class="content">
                <div class="row">
                    <div class="col-md-9">
                        <div class="box-body">
                            <div class="form-group">
                                <form asp-action="Create">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group">
                                        <label asp-for="Nome" class="control-label">Nome Departamento:</label>
                                        <input asp-for="Nome" class="form-control" placeholder="Nome departamento" />
                                        <span asp-validation-for="Nome" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="InstituicaoID" class="control-label">Instituição ID:</label>
                                        <select asp-for="InstituicaoID" class="form-control" asp-items="@(new SelectList(@ViewBag.Instituicoes, "InstituicaoID", "Nome"))"></select> 
                                    </div>
                                    <br />
                                    <div class="form-group text-center h3">
                                        <input type="submit" value="Registrar departamento" class="btn btn-light" />
                                        <a asp-action="Index" class="btn btn-info">Retornar à listagem de departamentos</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="card-footer bg-dark text-center text-white">
                            Informe os dados acima e/ou clique em um dos botões de ação
                        </div>
                    </div>
                </div>
            </section>
        </aside>
    </header>
</body>

@section ScriptPage {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

