@model InstituicaoDeEnsinoSuperior.Modelo.Cadastros.Instituicao

<aside class="right-side">
    <section class="content">
        <div class="row">
            <div class="col-md-9">
                <div class="box-body">
                    <div class="form-group">
                        <label asp-for="InstituicaoID" class="control-label">Instituição ID:</label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-key" aria-hidden="true"></i>
                            </div>
                            <input asp-for="InstituicaoID" class="form-control" disabled="disabled" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Nome" class="control-label">Nome:</label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-user-circle" aria-hidden="true"></i>
                            </div>
                            <input asp-for="Nome" class="form-control" disabled="disabled" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Endereco" class="control-label">Endereço:</label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-map-marked-alt" aria-hidden="true"></i>
                            </div>
                            <input asp-for="Endereco" class="form-control" disabled="disabled" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</aside>
<div class="col-4">
    @{ await Html.RenderPartialAsync("~/Areas/Cadastros/Views/Instituicao/_ComDepartamentos.cshtml", Model.Departamentos.ToList());}
</div>