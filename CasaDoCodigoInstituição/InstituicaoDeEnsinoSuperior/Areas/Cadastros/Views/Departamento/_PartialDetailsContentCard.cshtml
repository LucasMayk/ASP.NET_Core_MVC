@model InstituicaoDeEnsinoSuperior.Modelo.Cadastros.Departamento

<aside class="right-side">
    <section class="content">
        <div class="row">
            <div class="col-md-9">
                <div class="box-body">
                    <div class="form-group">
                        <label asp-for="DepartamentoID" class="control-label">Departamento ID:</label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-key" aria-hidden="true"></i>
                            </div>
                            <input asp-for="DepartamentoID" class="form-control" disabled="disabled" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Nome" class="control-label">Nome do Departamento:</label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-user-circle" aria-hidden="true"></i>
                            </div>
                            <input asp-for="Nome" class="form-control" disabled="disabled" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Instituicao.Nome" class="control-label">Instituição:</label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-home" aria-hidden="true"></i>
                            </div>
                            <input asp-for="Instituicao.Nome" class="form-control" disabled="disabled" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</aside>
