@model IEnumerable<InstituicaoDeEnsinoSuperior.Modelo.Cadastros.Departamento>

@{
    Layout = "_LayoutIES";
}

@section styles {
    <link rel="stylesheet" href="~/lib/datatables/css/jquery.dataTables.min.css" />
    <link href="~/template/css/datatables/dataTables.bootstrap.css" rel="stylesheet" type="text/css" />
}

@if (@TempData["Message"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Message"]
    </div>
}

<body class="sb-nav-fixed">
    <div id="layoutSidenav_content">
        <main>
            <div class="container-fluid">
                <h1 class="mt-4">Departamentos Registrados</h1>
                <br />
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="box-body table-responsive">
                            <table class="table table-bordered" id="tabela_departamentos" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Nome)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Instituicao.Nome)
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Nome)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Instituicao.Nome)
                                            </td>
                                            <td>
                                                <a asp-action="Edit" asp-route-id="@item.DepartamentoID">Edit</a> |
                                                <a asp-action="Details" asp-route-id="@item.DepartamentoID">Detail</a> |
                                                <a asp-action="Delete" asp-route-id="@item.DepartamentoID">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <br />
                        <div class="box-footer">
                            <a asp-action="Create" class="btn btn-info">Criar um novo departamento</a>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</body>



@section ScriptPage {
    <script src="~/template/js/plugins/datatables/jquery.dataTables.js" type="text/javascript"></script>
    <script src="~/template/js/plugins/datatables/dataTables.bootstrap.js" type="text/javascript"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#tabela_departamentos').DataTable({
                "order": [[1, "asc"]]
            });
        });
    </script>
}